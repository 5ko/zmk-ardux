// Combining accents (French)
ZMK_UNICODE_SINGLE(u_c_grave, N0, N3, N0, N0)
ZMK_UNICODE_SINGLE(u_c_acute, N0, N3, N0, N1)
ZMK_UNICODE_SINGLE(u_c_circ,  N0, N3, N0, N2)
ZMK_UNICODE_SINGLE(u_c_tilde, N0, N3, N0, N3)
ZMK_UNICODE_SINGLE(u_c_diar,  N0, N3, N0, N8)
ZMK_UNICODE_SINGLE(u_c_cedil, N0, N3, N2, N7)

// Digits
ZMK_UNICODE_SINGLE(u_0, N0, N0, N3, N0)
ZMK_UNICODE_SINGLE(u_1, N0, N0, N3, N1)
ZMK_UNICODE_SINGLE(u_2, N0, N0, N3, N2)
ZMK_UNICODE_SINGLE(u_3, N0, N0, N3, N3)
ZMK_UNICODE_SINGLE(u_4, N0, N0, N3, N4)
ZMK_UNICODE_SINGLE(u_5, N0, N0, N3, N5)
ZMK_UNICODE_SINGLE(u_6, N0, N0, N3, N6)
ZMK_UNICODE_SINGLE(u_7, N0, N0, N3, N7)
ZMK_UNICODE_SINGLE(u_8, N0, N0, N3, N8)
ZMK_UNICODE_SINGLE(u_9, N0, N0, N3, N9)
